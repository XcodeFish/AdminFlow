# 应用程序配置
NODE_ENV=development
PORT=7080
API_PREFIX=api
ENABLE_SWAGGER=true

# JWT配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# 数据库配置 - MySQL
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=root
DB_DATABASE=admin_flow
DB_SYNCHRONIZE=false
DB_LOGGING=true

# 数据库配置 - PostgreSQL (如果使用PostgreSQL，请取消注释)
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=postgres
# DB_DATABASE=admin_flow
# DB_SYNCHRONIZE=false
# DB_LOGGING=true

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 缓存配置
CACHE_TTL=3600

# 安全配置
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# 代码生成器配置
GEN_TEMPLATE_PATH=src/generator/template
GEN_TEMP_PATH=temp/generator
GEN_OUTPUT_PATH=temp/output
GEN_DEPLOY_PATH=../frontend/src/views

# 日志配置
LOG_LEVEL=debug
LOG_FILE_PATH=logs

# 文件上传配置
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=50mb

# 邮件服务配置 (可选)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=user@example.com
MAIL_PASSWORD=password
MAIL_FROM=noreply@adminflow.com
